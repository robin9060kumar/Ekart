spring: 
  cloud:
    gateway:
      discovery:
        locator:
          enabled: true
 #Add the routes here  
      routes:
        - id: ProductMS
          uri: lb://ProductMS
          predicates:
            - Path=Ekart/products**
        - id: FriendFamilyMS
          uri: lb://FriendFamilyMS
          predicates:
            - Path=/customers/*/friends
        - id: CustomerMS
          uri: lb://CustomerMS
          predicates:
            - Path=/customers/**      
            
         
      
